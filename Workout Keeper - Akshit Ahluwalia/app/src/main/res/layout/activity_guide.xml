            <TextView
                style="@style/how_to_card_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/card4_body" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#E0E0E0"
            android:orientation="vertical">

            <TextView
                style="@style/how_to_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/card5_header"
                android:textAlignment="center" />

            <TextView
                style="@style/how_to_card_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/card5_body" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

